WHAT: none
WHERE: none
WHEN: 0-24
WHO: none
OTHER: none

    SceneStart()
    // Calculate the time in days since the last check
    // We use the players age for that
    // It is incremented by 1/365 every day
    daysSinceBirth = (Player:Age * 365)
    daysSinceBirth += 0.5
    daysSinceBirth = daysSinceBirth.round()
    daysSinceBirth -= 1
    
    reward = 30000
    rewardLocal = reward.convertToLocalCurrency()
    
    // Check conditions!
    If !PlayerHasHome() 
        "Well, you need to find a home and some tenants first!"
        questEnd()
    Else
        "Alright, if you catch your tenants at least 100 times in the bathroom within the next 20 days you will be rewarded <rewardLocal>!"
        
        HE_bathroomparty_quest_start_date.setGlobal(daysSinceBirth)
        Player.setActorVar(RE_bathroom_encounters_quest, 0)
    EndIf
    
    SceneEnd()
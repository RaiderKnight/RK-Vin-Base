WHAT: none
WHERE: none
WHEN: 0 - 24
WHO: Dating = getRelative(); If Dating.isInterestedIn(Player)
OTHER: none

    SceneStart()

        "What kind of help I need from <Dating.relationship>?"
        0:: cooking < Random(0, 60) ::"Ask for help with cooking"
        1:: dance < Random(0, 60) ::"Ask for help with dance"
        3:: interpersonal < Random(0, 60) ::"Ask for help with my sociability"
        4:: intelligence < Random(0, 60) ::"Ask for help with reading books"
        6:: fitness < Random(0, 60) ::"Ask for help with training"
        7:: money < 0 ::"Ask for help financially"
        99::"I changed my mind"

        If 0
        
            followUp(family_cooks) //
        
        ElseIf 1
        
            followUp(family_dances) //
        
        ElseIf 3
        
            followUp(sociable_family) //
            
        ElseIf 4
        
            followUp(intelligent_family) //
            
        ElseIf 6
        
            followUp(fit_family) //
            
        ElseIf 7
        
            followUp(family_borrow) //

        EndIf

    SceneEnd() // Scene improved by Raddeck
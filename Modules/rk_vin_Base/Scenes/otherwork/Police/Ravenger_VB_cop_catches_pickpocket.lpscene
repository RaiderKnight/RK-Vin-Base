WHAT: Cop_Street_work
WHERE: all, -home
WHEN: 0-24
WHO: none
OTHER: Random(0, 100) < fitness && Random(0, 100) < sneak

    SceneStart()
        
        Hunger = Player.getActorVar(rk_VB_Hunger)
        HungerEnable = rk_VB_EnableHunger.getGlobal()
        
        "Hmm, what's that?"
        Player(Angry):: "Stop, what are you doing!"
        Actor = generatePersonTemporary()
        Actor.dress()
        Actor.show()
        "I caught a pickpocket red-handed."
        0:: "Let <Actor.him_or_her> go"
        1:: "Blackmail <Actor.him_or_her> for sex"
        2:: "Arrest thief"
        
        If 0
        
            Actor(Happy):: "Oh really? You're so kind, thank you. I only did this out of desperation ..."
            karma += 2
            
        Elseif 1
        
            Actor:: "Okay ... I guess I have no other choice. I don't want to go to prison."
            Sex(Player, Actor)
            karma -= 3
            If HungerEnable > 0
                Player.modifyActorVar(rk_VB_Hunger, -1)
            EndIf
            
        Else
        
            "I take the pickpocket to jail. Justice has been served!"
            jobexperience += 3
            karma += 1
            If HungerEnable > 0
                Player.modifyActorVar(rk_VB_Hunger, -0.5)
            EndIf
            
        Endif
        
    SceneEnd() // Scene edited by Raddeck
    timeout(200, Ravenger_VB_cop_catches_pickpocket)
    
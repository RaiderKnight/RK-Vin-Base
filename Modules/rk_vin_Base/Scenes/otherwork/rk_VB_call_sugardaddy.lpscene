WHEN: 16 - 22
WHO: none
OTHER: none
    
    SceneStart()
        If isWithCompanion() && CurrentCompanion.isValid()
            Player::"<CurrentCompanion.Name>, I need to take care of something. See you later!"
            endDate()
        EndIf
        Hunger = Player.getActorVar(rk_VB_Hunger)
        HungerEnable = rk_VB_EnableHunger.getGlobal()
        SugarParent = SugarParent.getGlobal()
        
        If SugarParent > 0
        
            Actor = getSpecific(SugarParent)
            secondScreen(Actor)
            Actor.dress()
            Actor.show(2)
            "What should I ask to my Sugar<Actor.Daddy_or_Mommy>?"
            0:: "Ask to hangout tonight"
            1:: "No"
            2:: "End arrangement"
            
            If 0
            
                Player(Happy):: "Honey, I miss you. Let's meet tonight."
                Actor(Happy):: "I miss you too, <Player.name>. Let's meet."
                secondScreen()
                Loc = findNearbyBuilding(restaurant, bar, nightclub)
                moveTo(Loc)
                Actor.show()
                "With that said, that evening, we meet to a nice expensive restaurant and as usual, we ended up in luxury hotel suite afterwards."
                Loc = findNearbyBuilding(hotel)
                moveTo(Loc)
                setBackground(home)
                Sex(Player, Actor)
                If HungerEnable > 0
                    Player.modifyActorVar(rk_VB_Hunger, -2)
                EndIf
                Actor.show(2)
                "With the deed done, we spent the night together and <Actor.name> give me a big fat envelope, as usual."
                money += Random(100, 300)
                perversion += Random(0, 0.25)
                moood += 2
                
            Elseif 1
            
                "Not today. I'm not in the mood actually!"
                
            Else
            
                "To be honest, I'm getting bored of <Actor.name>, so I told <Actor.him_or_her> our arrangement was over. I have no doubt <Actor.he_or_she> will find another sugarbabe soon though."
                SugarBabe.clearGlobal()
                //timeout(500, rk_VB_call_sugardaddy)
                
            Endif

        Else

            "You don't have any sugarparent!"        

        Endif
        
    SceneEnd()

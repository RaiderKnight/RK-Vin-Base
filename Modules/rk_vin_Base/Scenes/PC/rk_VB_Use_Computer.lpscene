WHAT: none
WHERE: none
WHEN: 0 - 24
WHO: none
OTHER: none

    SceneStart()
    
        Hunger = Player.getActorVar(rk_VB_Hunger)
        HungerEnable = rk_VB_EnableHunger.getGlobal()
        
        stock_ZellVostro = Player.getActorVar(stock_ZellVostro)
        stock_LPPavilion = Player.getActorVar(stock_LPPavilion)
        stock_LPware = Player.getActorVar(stock_LPware)
        stock_LPX = Player.getActorVar(stock_LPX)
        Stock_Computers = stock_ZellVostro + stock_LPPavilion + stock_LPware + stock_LPX

        If !isModEnabled(rk_ShopAddons)
            
            "You need to enable Shop-Addons mod to be able to use a computer...."
            
        ElseIf Stock_Computers <= 0
        
            "You don't have any computer to go online... Go buy a computer at any shop!"
        
        Else
        
            If WHERE != home && WHERE != fraternity
                
                SceneStart()
                    "You cannot use your pc here!"
                    "You can use your pc only if your are at home or in fraternity"
                SceneEnd()
                    
            Else
            
                "You open your computer to..."
            
            EndIf
            
            CashOnlineBid = 100
            CashOnlineBid_loc = CashOnlineBid.convertToLocalCurrency()
    
            "What do you want to do with your computer?"
            1::"Browse the web"
            20::"Make a mod"
            30::"Play a video game"
            8:: money > CashOnlineBid :: "Gamble online - <CashOnlineBid_loc> min. bid"
            99::"Go back"
    
            If 1
            
                followUp(rk_VB_Visit_Internet)
            
            ElseIf 8
                
                followUp(rk_VB_gamble_online)
            
            ElseIf 20

                Player.animate(browse)
                "I decided to make a mod..."
                intelligence += 0.5
                mood += 1
                karma += 1
                energy -= 1
                If HungerEnable > 0
                    Player.modifyActorVar(rk_VB_Hunger, -1)
                EndIf
                passTime(0.35, 1)
            
            ElseIf 30

                Random
                    Game1 = "Card games"
                    Game1 = "MahJong"
                EndRandom
                "What I should do?"
                0::"Play LifePlay"
                30::"Play a video game"
                
                If 0
                
                    Player.animate(browse)
                    "I decided to play LifePlay on my pc..."
                    intelligence += 0.2
                    mood += 3
                    arousal += 3
                    energy -= 1
                    If HungerEnable > 0
                            Player.modifyActorVar(rk_VB_Hunger, -1)
                    EndIf
                    
                ElseIf 
                ElseIf 
                ElseIf 30
                    Player.animate(browse)
                    "I decided to play <Game1> on my pc..."
                    intelligence += 0.2
                    mood += 3
                    energy -= 1
                    If HungerEnable > 0
                            Player.modifyActorVar(rk_VB_Hunger, -1)
                    EndIf
                
                EndIf
                passTime(0.9, 2)
                
            EndIf
    
        EndIf
    
    SceneEnd()
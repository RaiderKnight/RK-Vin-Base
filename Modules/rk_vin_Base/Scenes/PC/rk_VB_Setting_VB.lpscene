WHAT: none
WHERE: none
WHEN: 0 - 24
WHO: none
OTHER: none

    SceneStart()

        Hunger = Player.getActorVar(rk_VB_Hunger)
        HungerEnable = rk_VB_EnableHunger.getGlobal()
        UrgeToPeeEnable = rk_VB_UrgeToPeeEnable.getGlobal()
        UrgeToPee = Player.getActorVar(rk_VB_UrgeToPee)
        TuitionPriceEqualEnable = rk_VB_TuitionPriceEqualEnable.getGlobal()
        
        If !isModEnabled(nn_VB_HomeExpander) || !isModEnabled(nn_HomeExpander)
            
            "The HomeExpander module is currently OFF or don't exist. This particular version of the game has optional inventories if you have this module turned on. You can proceed or you can exit this scene, then Ctrl + M > tick Official nn_HomeExpander Module > Confirm to enjoy all the new inventories."
            0:: "Proceed, without HomeExpander"
            1:: "Open Mod Manager"
            
            If 1
                openMenu(ModManager)
            EndIf
        
        EndIf
        
        CheckingSetting = true
        While CheckingSetting
        
            0::"-- Setting for Vin_Base --"
            1::"Enable/disable Hunger"
            2::"Enable/disable Urge to pee"
            3::"Enable Same tuition price for all courses"
            30::"Set racial stereotypes"
            89::"---------------------------------"
            90::"Stuff in hand to store - Debugger"
            99::"Go back!"
            
            If 1
                If HungerEnable >= 0
                    "Hunger level is enable"
                Else
                    "Hunger level is disable"
                Endif
                "What should I do?"
                1::"Enable hunger"
                2::"Disable hunger"
                3::"Reset hunger stats"
                99::"Go back!"
    
                If 1
                
                    EnergyToHunger = Player:energy
                    "Hunger is now enabled!"
                    rk_VB_EnableHunger.setGlobal(1)
                    Player.setActorVar(rk_VB_Hunger, EnergyToHunger)
                    
                ElseIf 2
                
                    "Hunger is now disabled!"
                    rk_VB_EnableHunger.setGlobal(0)
                
                ElseIf 3
                
                    "Hunger is now reseted!"
                    rk_VB_EnableHunger.setGlobal(0)
                    Player.setActorVar(rk_VB_Hunger, 0)
                    rk_VB_EnableHunger.clearGlobal()
                    
                EndIf
                
            ElseIf 2
                If UrgeToPeeEnable >= 0
                    "Hunger level is enable"
                Else
                    "Hunger level is disable"
                Endif
                "What should I do?"
                1::"Enable the urge to pee"
                2::"Disable the urge to pee"
                3::"Reset the urge to pee stats"
                99::"Go back!"
            
                If 1
                
                    "The urge to pee is now enabled!"
                    rk_VB_UrgeToPeeEnable.setGlobal(1)
                
                ElseIf 2
                
                    "The urge to pee is now disabled!"
                    rk_VB_UrgeToPeeEnable.setGlobal(0)
                
                ElseIf 3
                
                    "The urge to pee is now reseted!"
                    rk_VB_UrgeToPeeEnable.setGlobal(0)
                    Player.setActorVar(rk_VB_UrgeToPee, 0)
                    rk_VB_UrgeToPeeEnable.clearGlobal()
                
                EndIf
                
            ElseIf 3
                
                "What should I do?"
                1::"Enable same tuition price for all courses"
                2::"Disable same tuition price for all courses"
                99::"Go back!"
            
                If 1
                
                    "Same tuition price for all courses is now enabled!"
                    rk_VB_TuitionPriceEqualEnable.setGlobal(1)
                
                ElseIf 2
                
                    "Same tuition price for all courses is now disabled!"
                    rk_VB_TuitionPriceEqualEnable.setGlobal(0)
                
                EndIf
            ElseIf 30
                followUp(set_stereotypes)
            ElseIf 90
                followUp(rk_VB_HandSwitchInv_VB)
            Else
            
                CheckingSetting = false
                
            EndIf
            
        EndWhile

    SceneEnd()
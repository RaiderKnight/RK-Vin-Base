        Hunger = Player.getActorVar(rk_VB_Hunger)
        HungerEnable = rk_VB_EnableHunger.getGlobal()
        Friendsentence = Friend.getActorVar(rk_VB_Sentence)
        
        If Friendsentence <= 0
            Friend.dress()
            
            "My phone rang ... It's <Friend.name> calling."
            Friend.show(2)
            Friend(Happy):: "Hey <Player.name>, do you want to hit the gym today?"
            "Go to the gym with <Friend.name>?"
            0:: "Yes"
            1:: "No"
            
            If 0
            
                Player(Happy):: "Of course. I'll see you in a bit!"
                Friend(Happy):: "See you soon!"
                setBackground(sports_centre)
                Friend.dress()
                Player.dress()
                
                If [!Player.isVisible(Bottom) && !Player.isVisible(Bottom_Under)] || [!Player.isVisible(Top) && !Player.isVisible(Top_Under) && !Player.isMale()]
                
                    If Friend:perversion > Random(60, 75)
                        Friend(Surprised):: "You're going like that! No way! Hahaha. I love it!"

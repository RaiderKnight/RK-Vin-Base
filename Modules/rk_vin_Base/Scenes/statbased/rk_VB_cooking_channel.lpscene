WHAT: all, -sleep, -nap, -sleep_hotel, -nap_hotel
WHERE: all, -work
WHEN: 17 - 22
WHO: none
OTHER: Random(80, 200) < cooking
    
    SceneStart()
    
        Hunger = Player.getActorVar(rk_VB_Hunger)
        HungerEnable = rk_VB_EnableHunger.getGlobal()
        ChannelStarted = rk_VB_cooking_channel.getGlobal()
        CchannelVids = Player.getActorVar(rk_VB_CchannelVids) // Cooking channel
        
        If ChannelStarted == 0
        
            "I consider myself to be good cook and I know a vast array of recipes. I reckon I might just have some success sharing my recipes by starting a cooking channel on YouTube. Should I?"
            0:: "Yes"
            1:: "No"
            
            If 0
            
                "Why not? It's certainly worth a try. Might be a good way to supplement my income."
                mood += 3
                rk_VB_cooking_channel.setGlobal(1)
                
            Else
            
                "No, I should stop daydreaming and focus on my real job."
                //timeout(500, cooking_channel)
                
            Endif
            
        Else
        
            "I've got some spare time. Should I make a new video on a new recipe for my cooking channel?"
            0:: "Yes"
            1:: "No"
            2:: "Close channel"
            
            If 0
            
                "Yes, it's important to upload regularly to keep my audience growing."
                cooking += Random(0, 0.25)
                
                If Random(0, 100) < cooking
                
                    "The new video turned out to be a success, earning a decent amount of views and a bit of money for myself."
                    money += Random(0.5, 5)*cooking
                    mood += 10
                    
                Else
                
                    "Unfortunately, the new video was a miss, not earning many views at all and even less money."
                    mood -= 10
                    
                Endif
                Player.modifyActorVar(rk_VB_CchannelVids, 1)
                If HungerEnable > 0
                    Player.modifyActorVar(rk_VB_Hunger, -1)
                EndIf
                
            Elseif 1
            
                "I'm too busy right now to film. Let's do that another day."
                
            Else
            
                "This thing isn't working out. It's time to shut it down."
                rk_VB_cooking_channel.clearGlobal()
                //timeout(500, rk_VB_cooking_channel)
                
            Endif
            
        Endif
    
    SceneEnd()  // Scene improved by Raddeck
    //timeout(48, cooking_channel)
WHAT: all, -sleep, -nap, -sleep_hotel, -nap_hotel
WHERE: all
WHEN: 17 - 20
WHO: none
OTHER: !isWithCompanion() && Random(50, 200) < dance && dance > 50

    SceneStart()
    
        Hunger = Player.getActorVar(rk_VB_Hunger)
        HungerEnable = rk_VB_EnableHunger.getGlobal()
        "There's a amateur dance competition happening in a few days. Should I sign up?"
        0:: "Yes"
        1:: "No"
        
        If 0
        
            "I decided to sign up and did quite a bit of practice before the competition."
            
            If Random(50, 200) < dance*Random(0, 1)
            
                "My efforts paid off. I was crowned the winner of the competition."
                dance += 2
                money += Random(500, 2000)
                mood => 100
                
            Elseif Random(50, 200) < dance
            
                "My efforts paid off. I managed to secure the third place in the competition."
                dance += 1
                money += Random(250, 1000)
                mood += 20
                
            Else
            
                "Despite my best efforts, there were far better dancers than I was, and I didn't get any prizes."
                dance -= 5
                mood -= 10
                
            Endif
            If HungerEnable > 0
                Player.modifyActorVar(rk_VB_Hunger, -10)
            EndIf
            energy -= 15
            
        Else
        
            "I decided not to sign up for the competition."
            
        Endif
        
    SceneEnd()  // Scene improved by Raddeck
    timeout(500, dance_competition)
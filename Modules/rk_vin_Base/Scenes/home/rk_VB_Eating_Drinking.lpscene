WHAT: none
WHERE: none
WHEN: 0 - 24
WHO: none
OTHER: none

    SceneStart()
    
        Hunger = Player.getActorVar(rk_VB_Hunger)
        HungerEnable = rk_VB_EnableHunger.getGlobal()
        stock_cocktail = Player.getActorVar(rk_VB_stock_cocktail)
        
        If HungerEnable > 0 && Hunger > 99
            
            "You have eaten enough...."
            
        Else
        
            "What should I drink or eat?"
            0:: stock_alcohol >= 0.8 ::"Drink alcohol"
            11:: stock_cocktail >= 0.8 ::"Drink cocktail"
            1:: stock_coffee >= 0.8 ::"Drink coffee"
            2:: stock_juice >= 0.8::"Drink juice"
            3:: stock_soda >= 0.8 ::"Drink soda"
            4:: stock_tea >= 0.8 ::"Drink tea"
            5:: "Drink water"
            6::""
            7:: stock_meal >= 0.8 ::"Have a meal"
            8:: stock_snack >= 0.8 ::"Have a snack"
            9:: "Order takeaway"
            99::"Go back!"
            
            If 0
            
                Player.animate(drinkbottle)
                "I decided to drink alcohol..."
                stock_alcohol -= 1
                intoxication += 15
                mood -= 1
                energy += 0.5
                If HungerEnable > 0
                    Player.modifyActorVar(rk_VB_Hunger, 0.5)
                EndIf
                passTime(0.15, 0.5)

            ElseIf 1
            
                Player.animate(drinktea)
                "I decided to drink a coffee..."
                stock_coffee -= 1
                mood += 2
                energy += 10
                If HungerEnable > 0
                    Player.modifyActorVar(rk_VB_Hunger, 5)
                EndIf
                passTime(0.15, 0.5)
            
            ElseIf 11
            
                Player.animate(drinkglass)
                "I decided to drink a cocktail..."
                Player.modifyActorVar(rk_VB_stock_cocktail, -1)
                mood += 1
                energy += 1
                intoxication += 15
                If HungerEnable > 0
                    Player.modifyActorVar(rk_VB_Hunger, 0.5)
                EndIf
                passTime(0.15, 0.5)
                
            ElseIf 2
            
                Player.animate(drinkglass)
                "I decided to drink juice..."
                stock_juice -= 1
                mood += 0.8
                fitness += 0.015
                energy += 1
                If HungerEnable > 0
                    Player.modifyActorVar(rk_VB_Hunger, 1)
                EndIf
                passTime(0.15, 0.5)
                
            ElseIf 3
            
                Player.animate(drinkbottle)
                "I decided to drink a soda..."
                stock_soda -= 1
                mood += 1
                fitness -= 0.02
                energy += 0.5
                If HungerEnable > 0
                    Player.modifyActorVar(rk_VB_Hunger, 0.5)
                EndIf
                passTime(0.15, 0.5)
            
            ElseIf 4
            
                Player.animate(drinktea)
                "I decided to drink a tea..."
                stock_tea -= 1
                mood += 2
                energy += 3
                If HungerEnable > 0
                    Player.modifyActorVar(rk_VB_Hunger, 3)
                EndIf
                passTime(0.15, 0.5)
            
            ElseIf 5
            
                Player.animate(drinkglass)
                "I decided to drink water..."
                mood += 0.5
                fitness += 0.01
                energy += 1
                If HungerEnable > 0
                    Player.modifyActorVar(rk_VB_Hunger, 1)
                EndIf
                passTime(0.15, 0.5)
            
            ElseIf 7
            
                Player.animate(eat)
                "I decided to have a meal.."
                stock_meal -= 1
                mood += 3
                energy += 15
                If HungerEnable > 0
                    Player.modifyActorVar(rk_VB_Hunger, 15)
                EndIf
                passTime(0.25, 0.5)
            
            ElseIf 8
            
                Player.animate(eat)
                "I decided to have a snack..."
                stock_snack -= 1
                mood += 1
                energy += 5
                If HungerEnable > 0
                    Player.modifyActorVar(rk_VB_Hunger, 5)
                EndIf
                passTime(0.15, 0.5)
                
            ElseIf 9
            
                Player.animate(call)
                "I decided to order takeaway..."
                money -= 7
                mood += 0.25
                stock_meal += 1
                passTime(0.05, 0.5)
                    
                followUp(deliveryman)
            
            EndIf
    
        EndIf
    
    SceneEnd()
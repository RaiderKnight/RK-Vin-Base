WHAT: none
WHERE: none
WHEN: 0 - 24
WHO: none
OTHER: none

    SceneStart()

        Hunger = Player.getActorVar(rk_VB_Hunger)
        HungerEnable = rk_VB_EnableHunger.getGlobal()

        If HungerEnable > 0 && Hunger < 9
            
            "You need to eat something... You don't have enough energy!"
            
        ElseIf energy < 9
            
            "You don't have enough energy...."
            
        Else
        
            "What should I do?"
            2:: !isWithCompanion() && fitness < Random(0, 100):: "Arrange a session with my personal trainer"
            10:: "Do cardio"
            1:: "Do light exercises" 
            3:: "Lift weights" 
            6:: "Practice martial art"
            99:: "Go back!"
            
            If 2
            
                followUp(personal_trainer)
            
            ElseIf 1
                
                Player.animate(yoga)
                "I decided to do light exercises..."
                energy -= 1.5
                fitness += 0.01
                mood += 1
                
                If HungerEnable > 0
                    Player.modifyActorVar(rk_VB_Hunger, -1.5)
                EndIf
                passTime(0.5, 1)
                Player.animate()

            ElseIf 3
                
                Player.animate(weights)
                "I decided to lift weights..."
                energy -= 7.5
                fitness += 0.02
                attractiveness += 0.01
                muscle += 0.03
                mood += 3
                
                If HungerEnable > 0
                    Player.modifyActorVar(rk_VB_Hunger, -7.5)
                EndIf
                passTime(0.5, 1.5)
                Player.animate()

            ElseIf 6
                
                Player.animate(martialart)
                "I decided to practice martial art..."
                energy -= 10
                martial += 0.25
                fitness += 0.02
                mood += 2
                interpersonal += 0.01
                attractiveness -= 0.01
                muscle += 0.01
                
                If HungerEnable > 0
                    Player.modifyActorVar(rk_VB_Hunger, -10)
                EndIf
                passTime(0.5, 1.5)
                Player.animate()

            ElseIf 10
                
                Player.animate(yoga)
                "I decided to do some cardio..."
                energy -= 10
                fitness += 0.05
                mood += 2
                muscle -= 0.01
                
                If HungerEnable > 0
                    Player.modifyActorVar(rk_VB_Hunger, -5)
                EndIf
                passTime(0.5, 1)
                Player.animate()

            EndIf
            
        EndIf

    SceneEnd()
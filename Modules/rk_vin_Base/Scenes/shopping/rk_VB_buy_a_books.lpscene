WHAT: none
WHERE: none
WHEN: 0 - 24
WHO: none
OTHER: none

    SceneStart()
    
        stock_book_LR = Player.getActorVar(stock_book_LR)
        stock_book_MB = Player.getActorVar(stock_book_MB)
        stock_book_O = Player.getActorVar(stock_book_O)
        stock_book_SB = Player.getActorVar(stock_book_SB)
        stock_book_SR = Player.getActorVar(stock_book_SR)
        stock_book_TB = Player.getActorVar(stock_book_TB)
        Totalstock_book = stock_book_LR + stock_book_MB + stock_book_O + stock_book_SB + stock_book_SR + stock_book_TB + stock_book + stock_book_P
        stock_book_P = Player.getActorVar(stock_book_P)
        IBuyaBook = Player.getActorVar(rk_VB_IBuyaBook)
        
        "Where I will store this book?"
        2::isModEnabled(nn_HomeExpander) && hasLivingroom ::"Inside my living room"
        3::"Inside my bedroom"
        4::isModEnabled(nn_HomeExpander) && hasOfficeroom::"Inside my office room"
        5::isModEnabled(nn_HomeExpander) && hasSecBedroom::"Inside my second bedroom"
        6::"Inside my storage room"
        7::isModEnabled(nn_HomeExpander) && hasThirdBedroom::"Inside my third bedroom"
        8::"Keep in my pockets"
                
        If 2
                
            "Added to your living room!"
            Player.modifyActorVar(stock_book_LR, 1)
            Player.modifyActorVar(rk_VB_IBuyaBook, 1)
                    
        ElseIf 3
                
            "Added to your bedroom!"
            Player.modifyActorVar(stock_book_MB, 1)
            Player.modifyActorVar(rk_VB_IBuyaBook, 1)
                    
        ElseIf 4
                
            "Added to your office room!"
            Player.modifyActorVar(stock_book_O, 1)
            Player.modifyActorVar(rk_VB_IBuyaBook, 1)
                    
        ElseIf 5
                
            "Added to your second bedroom!"
            Player.modifyActorVar(stock_book_SB, 1)
            Player.modifyActorVar(rk_VB_IBuyaBook, 1)
                    
        ElseIf 6
                
            "Added to your storage room!"
            Player.modifyActorVar(stock_book_SR, 1)
            Player.modifyActorVar(rk_VB_IBuyaBook, 1)
                    
        ElseIf 7
                
            "Added to your third bedroom!"
            Player.modifyActorVar(stock_book_TB, 1)
            Player.modifyActorVar(rk_VB_IBuyaBook, 1)
        
        ElseIf 8
                
            "Added to my pocket!"
            Player.modifyActorVar(stock_book_P, 1)
            Player.modifyActorVar(rk_VB_IBuyaBook, 1)
                    
        EndIf
        
        If stock_book > 0
        
            Player.setActorVar(rk_VB_IBuyaBook, Totalstock_book)
            stock_book => 0
            
        EndIf
        
    SceneEnd()
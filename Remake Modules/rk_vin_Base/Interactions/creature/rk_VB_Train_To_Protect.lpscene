WHAT: none
WHERE: none
WHEN: 0 - 24
WHO: none
OTHER: none

    SceneStart()
        Hunger = Player.getActorVar(rk_VB_Hunger)
        HungerEnable = rk_VB_EnableHunger.getGlobal()
        UrgeToPeeEnable = rk_VB_UrgeToPeeEnable.getGlobal()
        UrgeToPee = Player.getActorVar(rk_VB_UrgeToPee)
        DogGuardianStats = Player.getActorVar(DogGuardianStat)
        Actor.show()
        "I decided to train my dog to protect me and the house..."
        BonusStats = Random(0.01, 1)
        Player.modifyActorVar(DogGuardianStat, BonusStats)
        Actor:fitness += Random(0.01, 1)
        Actor:muscle += Random(0.01, 1)
        Actor:rapportwithplayer += Random(0, 1)
        Actor:attractiontoplayer += Random(0, 1)
        Actor:energy -= Random(10, 25)
        Player(Happy):: "Good <Actor.boy_or_girl>! ..."
        passTime(0.5, 1)
        If HungerEnable > 0
            Player.modifyActorVar(rk_VB_Hunger, -1)
        EndIf
    SceneEnd()
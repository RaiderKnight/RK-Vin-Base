WHAT: work_hourly
WHERE: hotel
WHEN: 0 - 24
WHO: none
OTHER: Random(0, 1000) < sneak

    SceneStart()
        Player.animate(sweep)
        Hunger = Player.getActorVar(rk_VB_Hunger)
        HungerEnable = rk_VB_EnableHunger.getGlobal()
        UrgeToPeeEnable = rk_VB_UrgeToPeeEnable.getGlobal()
        UrgeToPee = Player.getActorVar(rk_VB_UrgeToPee)
        setBackground(bedroom)
        "I was cleaning a room when I spotted a wallet under the bed. The guest staying in this room must have forgotten it."
        0:: "Steal some cash"
        1:: "Leave it"
        
        If 0
            "Most people don't remember how much cash they have left in their wallet. Taking some won't hurt ..."
            karma -= 2.5
            SneakGame()
            If Random(0, 100) < sneak*2
                sneak += Random(0, 0.5)
                CashT = Random(0, 200)
                CashTloc = CashT.convertToLocalCurrency()
                money += CashT
                "Nice, I took <Actor.him_or_her> <CashTloc>"
                CashO = Random(50, 150)
                CashOloc = CashO.convertToLocalCurrency()
                "I got <CashOloc> for cleaning!"
                money += CashO
                mood += 0.5
                energy -= 5
                "I did an impeccable cleaning, the <Actor.man_or_woman> was ultra satisfied and gave me a good tip."
                money += Random(20, 50)
                Player.animate()
                Actor.hide()
            Else
                "Suddenly, the door opened. What rotten luck! The guest is back ..."
                Actor = generatePersonTemporary()
                Actor.dress()
                Actor.show(2)
                Actor(Angry):: "What on earth do you think you're doing? Thief!"
                0:: "Make excuse"
                1:: isModEnabled(vin_VanillaPorn) && perversion > 30:: "Offer sex"
                
                If 0 && Random(0, 100) < interpersonal
                    "I managed to bluff my way out of trouble in the end with my slick tongues. Phew, that was close ..."
                Elseif 1 && Random(50, 100) < Actor:perversion + Actor:attractiontoplayer
                    Actor(Flirty):: "Oh well ... if that's on offer then I can consider not telling your manager all about this."
                    Sex(Player, Actor)
                    If HungerEnable > 0
                        Player.modifyActorVar(rk_VB_Hunger, -2)
                    EndIf
                    perversion += Random(0, 0.5)
                Elseif Actor.isInterestedIn(Player)
                    "None of what I was saying impressed the guest. <Actor.He_or_She> went straight to my manager. I was fined heavily and was lucky to not get fired over this incident."
                    money -= Random(50, 250)
                    mood -= Random(0, 50)
                Else
                    "None of what I was saying impressed the guest. <Actor.He_or_She> went straight to my manager. I was lucky to not get fired over this incident, but the <Actor.asshole_or_bitch> decided to call the Police..."
                    followUp(rk_VB_Steal_Arrest)
                Endif
            Endif
        Else
            "The hotel keeps records of who cleans which room on a given day. There's no way I can get away with theft."
            CashO = Random(50, 150)
            CashOloc = CashO.convertToLocalCurrency()
            "I got <CashOloc> for cleaning!"
            money += CashO
            mood += 0.5
            energy -= 5
            "I did an impeccable cleaning, the <Actor.man_or_woman> was ultra satisfied and gave me a good tip."
            money += Random(20, 50)
            Player.animate()
            Actor.hide()
        Endif
    SceneEnd() // Improved by Raddeck
    timeout(272, maid_steals)
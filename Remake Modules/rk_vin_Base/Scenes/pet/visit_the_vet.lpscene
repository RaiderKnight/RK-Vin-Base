WHAT: none
WHERE: none
WHEN: 0-24
WHO: none
OTHER: none

    SceneStart()
        UrgeToPeeEnable = rk_VB_UrgeToPeeEnable.getGlobal()
        UrgeToPee = Player.getActorVar(rk_VB_UrgeToPee)
        Hunger = Player.getActorVar(rk_VB_Hunger)
        HungerEnable = rk_VB_EnableHunger.getGlobal()
        ChevPrice = random(50, 100)
        PrixSBCL = ChevPrice.convertToLocalCurrency()
        If isWithCompanionCreature()
            "Should I pay for a health test for my pet <CurrentCompanion.name>?"
            0:: money > ChevPrice::"Yes (<PrixSBCL>)"
            1:: "No"
            
            If 0
                money -= ChevPrice
                "It cost quite a bit but <CurrentCompanion.name> came out of the session looking as healthy as ever."
                money -= random(50, 200)
                CurrentCompanion:fitness += random(0, 50)
                CurrentCompanion:mood += random(0, 50)
                CurrentCompanion:rapportwithplayer += random(1,2.5)
                CurrentCompanion:attractiontoplayer += random(2,3.5)
            Else
                "<CurrentCompanion.name> seems fine. No need to waste money."
            EndIf
        Else
            "I don't have a pet with me, so there's no need to go for a health test!"
        EndIf
    SceneEnd() // Improved by Raddeck
WHAT: none
WHERE: none
WHEN: 0-24
WHO: none
OTHER: none

    SceneStart()
        Pjour = age*365
        Pjour = Pjour.round()
        PremierJ = rk_VB_Job_PolPremierJ.getGlobal()
        Hunger = Player.getActorVar(rk_VB_Hunger)
        HungerEnable = rk_VB_EnableHunger.getGlobal()
        UrgeToPeeEnable = rk_VB_UrgeToPeeEnable.getGlobal()
        UrgeToPee = Player.getActorVar(rk_VB_UrgeToPee)
        PSalaire = CostOfLiving*2*[550 + [intelligence*20]]
        PSalaireL = PSalaire.convertToLocalCurrency()
        Law_Major_Ses_Done = rk_VB_Law_Major_Ses_Done.getGlobal()
        Job_police = rk_VB_Job_police.getGlobal()
        Actor1 = generatePersonTemporary()
        Actor1.dressUniform(police)
        Actor1:age => random(18, 55)
        Actor1.randomizeFace()
        Actor1.randomizeRace()
        Actor1.randomizeHairs()
        Actor1.hide()
        PPatron = generatePerson()
        PPatron.setBoss()
        PPatron:age => random(18, 55)
        PPatron.randomizeFace()
        PPatron.randomizeRace()
        PPatron.randomizeHairs()
        PPatron.dressUniform(police)
        PPatron.hide()
        jelai = false
        If Law_Major_Ses_Done == 0
            "It is necessary to have some knowledge of laws to become a police officer. Take a Laws class at university!"
        If muscle < 30 && martial < 40 && fitness < 40 && intelligence < 40
            "To become a police officer, you need to be in shape and smart! I think you need to train... Go work on your martial arts, muscles, fitness and your brain (intelligence)."
        ElseIf muscle < 30
            "To become a police officer, you need to be in shape! I think you need to train... Go work on your muscles."
        ElseIf martial < 40
            "To become a police officer, you need to be in shape! I think you need to train... Go work on your martial."
        ElseIf fitness < 40
            "To become a police officer, you need to be in shape! I think you need to train... Go work on your fitness."
        ElseIf intelligence < 40
            "To become a police officer, you need to be smart! I think you need to train your brain... Go work on your intelligence."
        ElseIf Job_police > 0
            "You're already a police officer!"
        Else
            "Do I want to apply for a career as a police officer in this precinct? They offer average salaries per month of <PSalaireL> for a police officer."
            0:: "Apply for a job as a police officer"
            1:: "I changed my mind"
    
            If 0
                "Yes, I have always wanted to protect and serve the citizens of my community. I think I will like this job!"
                Actor1.show()
                Actor1.moveToPersonStand(Player, 50)
                Actor1(Happy)::"Hi, can I help you?"
                Player(Happy)::"I actually came for the police officer position, are there any more openings?"
                Actor1(Happy)::"Of course, we are always looking for new talent!"
                Actor1(Happy)::"Leave me your resume and I will submit it to my boss. You will receive a call if you are selected!"
                Player(Happy)::"Ok, thanks! Have a nice day!"
                Actor1.hide()
                passTime(1, 2)
                setBackground(home)
                "After a while ..."
                "I get a call, I hope this is the place I applied earlier ..."
                Player.animate(call)
                facteurs = intelligence + fitness + martial + muscle
                secondScreen(Actor1)
                Actor1.show()
                If facteurs >= 150
                    Actor1(Happy)::"Hello my dear <Player.sir_or_miss>, this is to announce that you have been selected. You can start working from today if you wish!"
                    Player(Happy)::"Cool thanks a lot for the job!"
                    rk_VB_Job_police.setGlobal(1)
                    Player.setActorVar(rk_VB_PoliceSalary, PSalaire)
                    Player.setActorVar(rk_VB_PoliceXP, 1)
                    Player.setActorVar(rk_VB_PoliceSXP, 1)
                    rk_VB_Job_PolPremierJ.setGlobal(Pjour)
                    mood += random(5, 10)
                    Actor1(Happy)::"For every new officer, we hold a welcome reception before their first day on the job. So you are invited to come and meet us!"
                    Player(Happy)::"Sure, I'll come!"
                    Actor1(Happy)::"Good, see you soon!"
                    jelai = true
                Else
                    Actor1(Serene)::"Hello my dear <Player.sir_or_miss>, this is to inform you that you have not been selected. I wish you to find a job as soon as possible!"
                    Player(Sad)::"Okay, thank you anyway..."
                    Actor1(Happy)::"Have a nice day!"
                    mood -= random(1, 5)
                EndIf
                Actor1.hide()
                secondScreen()
                Player.animate()
            EndIf 
            If isModEnabled(rk_vin_Base)
                If jelai
                    Player.dress()
                    "I dress appropriately and leave for the police station for the reception in my honor and to meet my new colleagues."
                    setBackground(police)
                    "Once arrived at the police station... A police officer approaches me and says:"
                    PPatron.show()
                    PPatron.moveToPersonStand(Player, 50)
                    PPatron(Happy)::"Hi, you must be <Player.name> <Player.name_last>! I'm happy to meet you, I'm <PPatron.name> <PPatron.name_last>, but you can also call me boss!"
                    Player(Happy):: "Nice to meet you too, <PPatron.mr_or_miss> <PPatron.name_last>!"
                    exchangeContact(PPatron)
                    PPatron(Happy)::"Follow me, I'll introduce you to some of your new colleagues, at least the ones you'll work with sometimes!"
                    MesColl = random(5, 10)
                    count = 0
                    While count < MesColl
                        choco = random(10, 100)
                        choco1 = random(10, 100)
                        Policier = generatePerson()
                        Policier:age => random(18, 55)
                        Policier.randomizeFace()
                        Policier.randomizeRace()
                        Policier.randomizeHairs()
                        Policier.dressUniform(police)
                        Policier.setActorVar(tag_Police, 1)
                        Policier.addColleague()
                        Policier:sneak => random(10, 100)
                        Policier.setActorVar(rk_VB_PoliceXP, choco)
                        Policier.setActorVar(rk_VB_PoliceSXP, choco1)
                        Policier.show()
                        "One of my new colleague approached me ..."
                        Policier.moveToPersonStand(Player, 50)
                        Random
                            Policier(Happy)::"Hey there, nice to meet you, welcome back! My name is <Policier.name>!"
                            Policier(Happy)::"Hey hi, I'm <Policier.name>, nice to meet you!"
                            Policier(Happy)::"Hi, welcome to your new family! I'm <Policier.name>!"
                        EndRandom
                        "Should I exchange my phone numbers with <Policier.him_or_her>?"
                        0::"Yes"
                        1::"No"
                        
                        If 0
                            "We exchanged phone numbers and then <Policier.he_or_she> left to see other colleagues!"
                            exchangeContact(Policier)
                            Policier:rapportwithplayer += random(1, 5)
                        EndIf
                        Policier.saveAndDelete()
                        count += 1
                        Policier.hide()
                    EndWhile
                    PPatron.hide()
                    "Eventually, the reception wound down. I'm glad to have met many of my colleagues. I cannot wait for my first day tomorrow."
                EndIf
            EndIf
        EndIf
    SceneEnd()
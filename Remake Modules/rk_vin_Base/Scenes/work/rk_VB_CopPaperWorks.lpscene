WHAT: none
WHERE: none
WHEN: 0 - 24
WHO: none
OTHER: none

    SceneStart()
        Hunger = Player.getActorVar(rk_VB_Hunger)
        HungerEnable = rk_VB_EnableHunger.getGlobal()
        UrgeToPeeEnable = rk_VB_UrgeToPeeEnable.getGlobal()
        UrgeToPee = Player.getActorVar(rk_VB_UrgeToPee)
        PoliceXP = Player.getActorVar(rk_VB_PoliceXP)
        If isModEnabled(rk_vin_Base)
            Random
                txtSo = "killed"
                txtSo = "fired"
                txtSo = "brutally beaten"
                txtSo = "suspended"
            EndRandom
            Random
                txtSong = "boring"
                txtSong = "sad"
                txtSong = "silent"
            EndRandom
            "It's a <txtSong> day at the office today, everyone are down because one of our officer have been <txtSo> yesterday!"
            "I have a lots of works to do but I don't know, do I take this opportunity to browse the web instaed of working?"
            0:: "Do some works"
            1:: "Browse the web"
            
            If 0
                "I endured the boredom and found a way to have some fun on making my works."
                "Despite the pile of files I had to check and correct, I still had a great day!"
                energy -= random(15, 30)
                Player.modifyActorVar(rk_VB_PoliceXP, 1)
                intelligence += random(0.25, 2)
                jobperformance += random(0.25, 1)
                jobexperience += random(0.25, 1)
            Else
                "I entertained myself by browsing the web and watching YouTube videos, before going home early."
                energy -= random(5, 15)
                karma -= 1
                mood += random(0, 30)
                jobperformance -= random(0, 0.5)
                Player.modifyActorVar(rk_VB_PoliceXP, -1)
            EndIf
            If HungerEnable > 0
                Player.modifyActorVar(rk_VB_Hunger, -10)
            EndIf
        EndIf
    SceneEnd()
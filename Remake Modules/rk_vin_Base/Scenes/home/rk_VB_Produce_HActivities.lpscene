WHAT: none
WHERE: none
WHEN: 0 - 24
WHO: none
OTHER: none

    SceneStart()
        
        stock_cocktail = Player.getActorVar(rk_VB_stock_cocktail)
        Hunger = Player.getActorVar(rk_VB_Hunger)
        HungerEnable = rk_VB_EnableHunger.getGlobal()
        
        rk_VB_Stock_Ovenandstoves = Player.getActorVar(rk_VB_Stock_Ovenandstoves)
        rk_VB_Stock_Microwave = Player.getActorVar(rk_VB_Stock_Microwave)
        
        rk_VB_Stock_Ovenandstoves1 = Player.getActorVar(rk_VB_Stock_Ovenandstoves1)
        rk_VB_Stock_Microwave1 = Player.getActorVar(rk_VB_Stock_Microwave1)
        
        rk_VB_Stock_Ovenandstoves2 = Player.getActorVar(rk_VB_Stock_Ovenandstoves2)
        rk_VB_Stock_Microwave2 = Player.getActorVar(rk_VB_Stock_Microwave2)
        
        rk_VB_Stock_OvenandstovesSR = Player.getActorVar(rk_VB_Stock_OvenandstovesSR)
        rk_VB_Stock_MicrowaveSR = Player.getActorVar(rk_VB_Stock_MicrowaveSR)
        
        rk_VB_Stock_Ovenandstoves1SR = Player.getActorVar(rk_VB_Stock_Ovenandstoves1SR)
        rk_VB_Stock_Microwave1SR = Player.getActorVar(rk_VB_Stock_Microwave1SR)
        
        rk_VB_Stock_Ovenandstoves2SR = Player.getActorVar(rk_VB_Stock_Ovenandstoves2SR)
        rk_VB_Stock_Microwave2SR = Player.getActorVar(rk_VB_Stock_Microwave2SR)
        
        rk_VB_Stock_OvenandstovesMB = Player.getActorVar(rk_VB_Stock_OvenandstovesMB)
        rk_VB_Stock_MicrowaveMB = Player.getActorVar(rk_VB_Stock_MicrowaveMB)
        
        rk_VB_Stock_Ovenandstoves1MB = Player.getActorVar(rk_VB_Stock_Ovenandstoves1MB)
        rk_VB_Stock_Microwave1MB = Player.getActorVar(rk_VB_Stock_Microwave1MB)
        
        rk_VB_Stock_Ovenandstoves2MB = Player.getActorVar(rk_VB_Stock_Ovenandstoves2MB)
        rk_VB_Stock_Microwave2MB = Player.getActorVar(rk_VB_Stock_Microwave2MB)
        
        rk_VB_Stock_OvenandstovesK = Player.getActorVar(rk_VB_Stock_OvenandstovesK)
        rk_VB_Stock_MicrowaveK = Player.getActorVar(rk_VB_Stock_MicrowaveK)
        
        rk_VB_Stock_Ovenandstoves1K = Player.getActorVar(rk_VB_Stock_Ovenandstoves1K)
        rk_VB_Stock_Microwave1K = Player.getActorVar(rk_VB_Stock_Microwave1K)
        
        rk_VB_Stock_Ovenandstoves2K = Player.getActorVar(rk_VB_Stock_Ovenandstoves2K)
        rk_VB_Stock_Microwave2K = Player.getActorVar(rk_VB_Stock_Microwave2K)
        
        Stock_Ovenandstoves = rk_VB_Stock_Ovenandstoves + rk_VB_Stock_Ovenandstoves1 + rk_VB_Stock_Ovenandstoves2 + rk_VB_Stock_OvenandstovesSR + rk_VB_Stock_Ovenandstoves1SR + rk_VB_Stock_Ovenandstoves2SR + rk_VB_Stock_OvenandstovesMB + rk_VB_Stock_Ovenandstoves1MB + rk_VB_Stock_Ovenandstoves2MB + rk_VB_Stock_OvenandstovesK + rk_VB_Stock_Ovenandstoves1K + rk_VB_Stock_Ovenandstoves2K
        Stock_Microwaves = rk_VB_Stock_Microwave + rk_VB_Stock_Microwave1 + rk_VB_Stock_Microwave2 + rk_VB_Stock_MicrowaveSR + rk_VB_Stock_Microwave1SR + rk_VB_Stock_Microwave2SR + rk_VB_Stock_MicrowaveMB + rk_VB_Stock_Microwave1MB + rk_VB_Stock_Microwave2MB + rk_VB_Stock_MicrowaveK + rk_VB_Stock_Microwave1K + rk_VB_Stock_Microwave2K

        If HungerEnable > 0 && Hunger < 9
            
            "You need to eat something... You don't have enough energy!"
            
        ElseIf energy < 9
            
            "You don't have enough energy...."
            
        Else
        
            "What should I produce?"
            1:: stock_ingredient >= 1.8 && [Stock_Ovenandstoves > 0 || Stock_Microwaves > 0] ::"Cook a meal (-2 ingredient)" 
            3:: stock_alcohol >= 0.8 ::"Make a cocktail (-1 alcohol)" 
            6:: stock_ingredient >= 0.8 ::"Make a snack (-1 ingredient)" 
            8::"Calendars"
            9::"Magazines"
            10::"Movies"
            99:: "Go back!"
            
            If 1
                
                // Player.animate(cooking)
                "I decided to cook a meal..."
                stock_ingredient -= 2
                stock_meal += 1
                cooking += 0.2
                energy -= 2
                mood += 5
                mood -= 1
                "1 meal added to my refrigerator!"
                
                If HungerEnable > 0
                    Player.modifyActorVar(rk_VB_Hunger, -1)
                EndIf
                passTime(0.5, 1)
                
            ElseIf 3
                
                // Player.animate(cooking)
                "I decided to make a cocktail..."
                stock_alcohol -= 1
                mood += 1
                "2 cocktails added to my pantry!"
                Player.modifyActorVar(rk_VB_stock_cocktail, 2)
                
                If HungerEnable > 0
                    Player.modifyActorVar(rk_VB_Hunger, -0.5)
                EndIf
                passTime(0.15, 0.5)

            ElseIf 6
                
                // Player.animate(cooking)
                "I decided to make a snack..."
                stock_ingredient -= 1
                stock_snack += 1
                cooking += 0.1
                mood += 2
                "1 snack added to my pantry!"
                
                If HungerEnable > 0
                    Player.modifyActorVar(rk_VB_Hunger, -0.5)
                EndIf
                passTime(0.15, 0.5)
            
            ElseIf 8 || 9
                
                followUp(rk_VB_Produce)
            
            ElseIf 10
                
                followUp(rk_VB_Produce_Movie)

            EndIf
            
        EndIf

    SceneEnd()
WHAT: all
WHERE: all, -home, -work, -prison
WHEN: 0 - 24
WHO: none
OTHER: Player.isRace(Vampire)

    SceneStart()
        If isModEnabled(rk_vin_Base)
            UrgeToPeeEnable = rk_VB_UrgeToPeeEnable.getGlobal()
            UrgeToPee = Player.getActorVar(rk_VB_UrgeToPee)
            Hunger = Player.getActorVar(rk_VB_Hunger)
            HungerEnable = rk_VB_EnableHunger.getGlobal()
            DrinkVBlood = rk_VB_DrinkVBlood.getGlobal()
            HBloodInv = Player.getActorVar(rk_VB_Hum_BloodInv)
            OBloodInv = Player.getActorVar(rk_VB_Orc_BloodInv)
            EBloodInv = Player.getActorVar(rk_VB_Elf_BloodInv)
            VBloodInv = Player.getActorVar(rk_VB_Vam_BloodInv)
            HypnoLvL = Player.getActorVar(rk_VB_VampHypnoLvL)
            AttractLVL = Actor:attractiveness
            FertiLVL = Actor:fertility
            IntelLVL = Actor:intelligence
            TotalMixture = AttractLVL + FertiLVL + IntelLVL
            MagicNum = TotalMixture/10
            If HypnoLvL > 100
                Player.setActorVar(rk_VB_VampHypnoLvL, 100)
            EndIf
        EndIf
        "I was going about my day when I was stopped by an adoring stranger."
        Actor = generatePersonTemporary()
        Random
            Actor.blendPreset(elf)
            Actor.blendPreset(orc)
            setRaceGenerated(black)
            setRaceGenerated(indian)
            setRaceGenerated(arab)
            setRaceGenerated(latin)
            setRaceGenerated(asian)
            setRaceGenerated(white)  
        EndRandom
        Actor.dress()
        Actor.show()
        Actor(Curious):: "You're a vampire, right?"
        "I was slightly worried at first, but the stranger didn't look like a vampire hunter at all."
        Actor(Happy):: "I've always wanted to become a vampire. I'm obsessed. I've read so vampire novels!"
        Actor(Curious):: "Please, grant me your gift!"
        "What should I do?"
        0:: "Suck <Actor.his_or_her> blood and infect <Actor.him_or_her>"
        1:: "No"
        
        If 0
            Player(Serene)::"Why not, our population is quite low, one more warrior is always welcome..."
            setBackground(home)
            "We decided to go back to <Actor.his_or_her> place for privacy to go through our 'procedure'."
            Player(Kiss)::"..."
            animatePair(Player, Actor, Kissing)
            Actor:fitness -= 1
            Actor:attractiveness -= 1
            If Actor.isRace(Elf)
                intelligence += random(1, 3)
                attractiveness += random(1, 3)
            ElseIf Actor.isRace(Orc)
                muscle += random(1, 3)
                martial += random(1, 3)
            EndIf
            Player.modifyActorVar(rk_VB_VampHypnoLvL, MagicNum)
            energy += MagicNum
            mood += random(1, 3)
            Player(Happy)::"Humm!"
            "That's some yummy blood, enough to keep my energy level up for a while. I also made sure to suck long enough to infect <Actor.name> and turn <Actor.him_or_her>."
            Actor.blendPreset(Vampire)
            "After a while, <Actor.name> started showing physical signs of a vampire. <Actor.He_or_She> was delighted. It was a life-long dream fulfilled for <Actor.him_or_her>."
            Actor(Happy)::"Wow cool, now I'm a vampire!"
            If Actor.isInterestedIn(Player)
                Actor(Happy)::"Uh, I don't have any money or anything of value to offer you as a thank you but I'll offer to fuck me if you want!"
                0:: "Accept the offer"
                1:: "Refuse the offer"
                
                If 0
                    "Since we're now both vampires, we should celebrate."
                    perversion += 1
                    Sex(Actor, Player)
                    If HungerEnable > 0
                        Player.modifyActorVar(rk_VB_Hunger, -2)
                    EndIf
                    mood += 1
                Else
                    Player(Serene)::"Sorry my dear but I have more important things to do right now!"
                    Actor(Sad)::"Anyway thanks, seriously you make my day!"
                    "And poof! <Actor.he_or_she> disappears!"
                EndIf
                If !Actor.isContactExchanged()
                    "Should I exchange my phone number with <Actor.name>?"
                    0::"Yes"
                    1::"No"
                    
                    If 0
                        "We exchanged numbers and then <Actor.he_or_she> went home..."
                        Actor.makePermanent()
                        exchangeContact(Actor)
                    EndIf
                EndIf
            Else
                Actor(Sad)::"Uh, I don't have any money or anything of value to offer you but seriously you make my day!"
                "And poof! <Actor.he_or_she> disappears!"
            EndIf
        Else
            Player(Serene)::"Sorry my dear but I have more important things to do right now!"
        EndIf
        Actor.hide()
    SceneEnd() // Improved by Raddeck
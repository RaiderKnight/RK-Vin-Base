        setBackgroundCustom(livingroom)
        "I come home only to find a stranger sitting in my living room..."
        Actor99 = generatePersonTemporary()
        Actor99.hide()
        Actor = generatePersonTemporary()
        While !Player.isInterestedIn(Actor) && !Actor.isVirgin()
            Actor = generatePersonTemporary()
        EndWhile
        Actor:age => random(18, 20)
        Actor:attractiveness => random(70, 100)
        Actor.randomizeFace()
        Actor.randomizeHairs()
        If PercentageElves > 0 && PercentageOrcs > 0 && PercentageVampires > 0
